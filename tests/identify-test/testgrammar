/**
 * This is a interface. And this comment is a GroovyDoc!
 * Do you notice this? Good!
 */
interface InterfaceWithMethodPrototypes {
  def someMethod()
  String someMethod()

  def someMethod(param1)
  def someMethod(param1, param2)

  int someMethod(param1)
  long someMethod(para1, param2, param3)

  public Date someMethod()
  private String someMethod(param1)
  protected Short someMethod(param1, param2)
}

abstract class AbstractClassExample {
  /* This is a example of abstract class. */
}

class ExampleVariableDeclarations implements Interface {
  short varShort
  public int varInt
  private long varLong
  protected float varFloat
  final double varDouble
  static boolean varBoolean

  UserClass varUserClass
}

class AnotherExampleVariableDeclarations extends AbstracClass {
  Short varShort
  public Integer varInteger
  private long varLong
  protected Float varFloat
  final Double varDouble
  static Boolean varBoolean

  Date varDate
  List varList

  UserClass[] varArrayClass
}

