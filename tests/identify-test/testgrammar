class ControlStructureIFExample {
  if(variable && variable) {
    /* If structure. */
  }

  if(variable == variable) {
    /* If structure. */
  } else {
    /* If structure. */
  }

  if(variable != variable) {
    /* If structure. */
  } else if(variable <= variable) {
    /* If structure. */
  }

  if(variable >= variable) {
    /* If structure. */
  } else if(variable || variable) {
    /* If structure. */
  } else {
    /* If structure. */
  }
}

class ControlStructureSWITCHExample {
  switch(variable) {
    case 1:
      /* Switch structure. */
    case 2:
      /* Switch structure. */
    case 3:
      /* Switch structure. */
    case 4:
      /* Switch structure. */
    default:
      /* Switch structure. */
  }
}

class ControlStructureFORExample {
  for(int i = 0; i < variable; i++) {
    if( variable == variable ) {
      /* Its a IF structure. */
    }
  }

  for(UserClass user : Users) {
    def var = user
  }

  for(user in Users) {
    /* Its a FOR structure. */
  }
}

