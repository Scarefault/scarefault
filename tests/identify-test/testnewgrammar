        """
}

class LoopingtructureExample {

  for( int i = 0; i > object.attribute; i++ ) {
    /* Do Something */
  }

  for( int i = 0; i > object.method(); i++ ) {
    /* Do Something */
  }

  for( int i = 0; i > variable; i++ ) {
    /* Do Something */
  }

  for( int i = 0; i > 100; i++ ) {
    /* Do Something */
  }

  for( int i = 0; i < variable; i++ ) {
  /* Do Something */
  }

  for( int i = 0; i < 100; i++ ) {
    /* Do Something */
  }

  while( true ) {
    /* Do Something */
  }
}

